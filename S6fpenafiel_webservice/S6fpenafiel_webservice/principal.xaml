<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S6fpenafiel_webservice.principal"
             NavigationPage.HasNavigationBar="False"> <!--desactivo la navegacion-->

    <StackLayout>
        <!--creo una etiqueta-->
        <Label Text="Consumir web service Get" FontSize="28" HorizontalTextAlignment="Center"/>

        <Label x:Name="lbltexto" Text=""/>
        
        <!--creo un boton-->
        <Button Text="Consultar"
                x:Name="btnGet"
                Clicked="btnGet_Clicked"/>

        <ListView x:Name="MyListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblnombre" Text="{Binding nombre}"/> <!--muestro como dato de la tabla el nombre-->

                            <Label x:Name="lblapellido" Text="{Binding apellido}"/> <!--muestro el campo apellido de la tabla-->
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>